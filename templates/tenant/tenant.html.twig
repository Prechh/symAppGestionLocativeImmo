{% extends 'base.html.twig' %}

{% block title %}
	Locataires
{% endblock %}

{% block body %}
	<nav class="navbar navbar-expand-lg navbar-light bg-success">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{ path('app_home') }}">AgenceImmobillièreFictive</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarColor03">
				<ul class="navbar-nav me-auto">
					<li class="nav-item">
						<a class="nav-link active" href="#">Utilisateurs
							<span class="visually-hidden">(current)</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active" href="{{ path('app_property') }}">Propriétées
							<span class="visually-hidden">(current)</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active" href="#">Locataires
							<span class="visually-hidden">(current)</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active" href="#">Paiements
							<span class="visually-hidden">(current)</span>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div style="padding: 75px;" class="mt-4">
		<div class="jumbotron">
			<h1 class="mb-5">
				Liste des locataires
			</h1>

			{% for message in app.flashes('success') %}
				<div class="alert alert-success mt-4">
					{{ message }}
				</div>
			{% endfor %}

			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Numéros</th>
						<th scope="col">Nom</th>
						<th scope="col">Prénom</th>
						<th scope="col">Montant du loyer</th>
						<th scope="col">Solde du compte</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>

				<tbody>
					{% for tenant in tenants|sort %}
						<tr class="table-light">
							<th scope="row">{{ tenant.id }}</th>
							<td>{{ tenant.name }}</td>
							<td>{{ tenant.firstname }}</td>
							<td>{{ tenant.monthlyrate }}</td>
							<td>{{ tenant.accountbalance }}</td>
							<td>
								<a href="{{ path('app_tenant_edit', {id: tenant.id}) }}" class="btn btn-warning">
									Editer
								</a>
							</td>
							<td>
								<a href="{{ path('app_tenant_delete', {id: tenant.id}) }}" class="btn btn-danger">
									Supprimer
								</a>
							</td>

						</tr>
					{% endfor %}
				</tbody>
			</table>

			<div class="navigation d-flex justify-content-center">
				{{ knp_pagination_render(tenants) }}
			</div>

			<a href="{{ path('app_tenant_new') }}" class="btn btn-success mt-4 d-flex justify-content-center">
				Ajouter un locataire
			</a>

		</div>
	</div>
{% endblock %}
